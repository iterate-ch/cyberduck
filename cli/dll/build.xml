<project name="Cyberduck Native Libraries" basedir=".">

    <import file="../../build.xml"/>

    <property name="ikvm.home" value="${build}/ikvm-8.1.5717.0"/>

    <target name="build" depends="version">
        <taskdef name="ikvmc" classname="net.ikvm.ant.IkvmcTask">
            <classpath path="${lib.ext}/ant-ikvmc.0.5.jar"/>
        </taskdef>
        <mkdir dir="${build}"/>
        <!-- Create DLL Cyberduck.Importer -->
        <ikvmc target="library" out="${build}/Cyberduck.Cli.dll" home="${ikvm.home}"
               classloader="ikvm.runtime.AppDomainAssemblyClassLoader" version="${version}" debug="false" verbose="true">
            <reference path="${build}/Cyberduck.Core.dll"/>
            <reference path="${build}/Cyberduck.Protocols.dll"/>
            <arg value="-skipDuplicates"/>
            <fileset dir="${build}">
                <include name="*.jar"/>
                <exclude name="asm-*.jar"/>
                <exclude name="cglib-*.jar"/>
                <exclude name="*-sources.jar"/>
                <exclude name="*-tests.jar"/>
            </fileset>
        </ikvmc>
    </target>
</project>
