<Project>

  <PropertyGroup Label="AssemblyInfo">
    <AssemblyVersion>${version}</AssemblyVersion>
    <InformationalVersion>${fullversion}</InformationalVersion>
    <Revision>${revision}</Revision>
    <Revision Condition=" '$(Revision)' == '' ">0</Revision>
    <FileVersion>$(AssemblyVersion).$(Revision)</FileVersion>
    <Copyright><![CDATA[${copyright}]]></Copyright>
    <Version>$(InformationalVersion)</Version>
  </PropertyGroup>

  <PropertyGroup>
    <SignOutput>${msbuild.sign}</SignOutput>
    <SignTool>${signtool}</SignTool>
    <SignToolCSP>${signtool.csp}</SignToolCSP>
    <SignToolKC>${signtool.kc}</SignToolKC>
  </PropertyGroup>

</Project>
