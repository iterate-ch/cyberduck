<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.cyberduck</groupId>
        <artifactId>parent</artifactId>
        <relativePath>../../pom.xml</relativePath>
        <version>10.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>Cyberduck.Core</artifactId>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>mac</id>
            <activation>
                <os>
                    <family>Mac</family>
                </os>
            </activation>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>Linux</family>
                </os>
            </activation>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-runtime</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>ch.iterate</groupId>
                                            <artifactId>ikvm</artifactId>
                                            <type>zip</type>
                                            <version>${ikvm-version}</version>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-dll</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>attach-artifact</goal>
                                </goals>
                                <configuration>
                                    <artifacts>
                                        <artifact>
                                            <type>dll</type>
                                            <file>${project.build.directory}/Cyberduck.Core.dll</file>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
            <dependencies>
                <dependency>
                    <!--
                        Workaround for jackson-databind being included in Protocols & Cryptomator.
                      -->
                    <groupId>com.fasterxml.jackson.core</groupId>
                    <artifactId>jackson-databind</artifactId>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>net.java.openjdk</groupId>
                    <artifactId>sunmscapi</artifactId>
                    <classifier>x86_64</classifier>
                    <type>dll</type>
                    <version>${java-native-dll}</version>
                    <scope>runtime</scope>
                </dependency>
                <dependency>
                    <groupId>net.java.openjdk</groupId>
                    <artifactId>sunmscapi</artifactId>
                    <version>${java-native-dll}</version>
                    <scope>runtime</scope>
                </dependency>
                <dependency>
                    <groupId>net.java.openjdk</groupId>
                    <artifactId>sunec</artifactId>
                    <classifier>x86_64</classifier>
                    <type>dll</type>
                    <version>${java-native-dll}</version>
                    <scope>runtime</scope>
                </dependency>
                <dependency>
                    <groupId>net.java.openjdk</groupId>
                    <artifactId>sunec</artifactId>
                    <version>${java-native-dll}</version>
                    <scope>runtime</scope>
                </dependency>
                <dependency>
                    <groupId>net.java.dev.jna</groupId>
                    <artifactId>jnidispatch</artifactId>
                    <classifier>x86_64</classifier>
                    <type>dll</type>
                    <version>${jna-version}</version>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>ch.cyberduck</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
